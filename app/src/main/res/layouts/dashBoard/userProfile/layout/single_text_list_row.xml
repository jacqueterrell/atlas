<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type = "android.view.View"/>

        <variable
            name = "viewModel"
            type = "com.team.mamba.atlas.userInterface.dashBoard.profile.individual.edit_education_info.EditEducationViewModel"/>

    </data>

<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_selection"
        style="@style/App_Text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Degree"
        android:textSize="17sp"
        android:padding="15dp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
        android:background="?attr/selectableItemBackground"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/material_icons_light"
        android:layout_gravity="bottom"/>

</FrameLayout>

</layout>