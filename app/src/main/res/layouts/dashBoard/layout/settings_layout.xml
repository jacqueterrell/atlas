<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type = "android.view.View"/>

        <variable
            name = "viewModel"
            type = "com.team.mamba.atlas.userInterface.dashBoard.settings.SettingsViewModel"/>

    </data>

    <FrameLayout
        android:id="@+id/layout_dashboard_settings"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:clickable="true"
        android:focusable="true">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="65dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    style="@style/App_Text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:text="Settings"
                    android:textAlignment="center"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
                    android:textSize="17sp"
                    />

                <TextView
                    style="@style/App_Text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/super_transparent_black"
                    android:padding="15dp"
                    android:text="Business Solutions"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    />

                <TextView
                    style="@style/App_Text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:text="Corporate Directory"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
                    android:background="?attr/selectableItemBackground"
                    android:textSize="15sp"
                    android:onClick="@{()-> viewModel.onCorporateDirectoryClicked()}"
                    />

                <TextView
                    style="@style/App_Text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:text="Organizational Outreach"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
                    android:background="?attr/selectableItemBackground"
                    android:textSize="15sp"
                    android:onClick="@{()-> viewModel.onOrganizationalOutreachClicked()}"
                    />

                <TextView
                    style="@style/App_Text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:text="Alumni Networking"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
                    android:background="?attr/selectableItemBackground"
                    android:textSize="15sp"
                    android:onClick="@{()-> viewModel.onAlumniNetworkingClicked()}"

                    />

                <TextView
                    style="@style/App_Text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/super_transparent_black"
                    android:padding="15dp"
                    android:text="About"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <TextView
                    style="@style/App_Text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:text="Privacy Policy"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
                    android:background="?attr/selectableItemBackground"
                    android:textSize="15sp"
                    android:onClick="@{()-> viewModel.onPrivacyPolicyClicked()}"
                    />

                <TextView
                    style="@style/App_Text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:text="Terms of Service"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
                    android:background="?attr/selectableItemBackground"
                    android:textSize="15sp"
                    android:onClick="@{()-> viewModel.onTermsOfServiceClicked()}"
                    />


                <TextView
                    style="@style/App_Text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/super_transparent_black"
                    android:padding="15dp"
                    android:text="Account"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    />

                <TextView
                    style="@style/App_Text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:text="Network Managerment"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
                    android:background="?attr/selectableItemBackground"
                    android:textSize="15sp"
                    android:onClick="@{()-> viewModel.onNetworkManagementClicked()}"
                    />

                <TextView
                    style="@style/App_Text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:text="Logout"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
                    android:background="?attr/selectableItemBackground"
                    android:textSize="15sp"
                    android:onClick="@{()-> viewModel.onLogOutClicked()}"
                    />

                <TextView
                    style="@style/App_Text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:text="Delete My Account"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
                    android:background="?attr/selectableItemBackground"
                    android:textSize="15sp"
                    android:onClick="@{()-> viewModel.onDeleteMyAccountClicked()}"
                    />



            </LinearLayout>

        </ScrollView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="15dp"
            android:layout_gravity="bottom"
            >

            <TextView
                style="@style/App_Text_view"
                android:id="@+id/tv_version_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="10dp"
                tools:text="Version 0.1"/>

            <TextView
                style="@style/App_Text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:onClick="@{()-> viewModel.onSiteLinkClicked()}"
                android:padding="10dp"
                android:text="mytlas.co"
                android:textColor="@color/colorPrimary" />

        </LinearLayout>

        <FrameLayout
            android:id="@+id/layout_terms_of_service"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:background="@color/white"
            android:clickable="true"
            android:focusable="true">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_terms_header"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Terms of Service"
                        style="@style/App_Text_view"
                        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                        android:textSize="17sp"
                        android:visibility="gone"
                        android:layout_marginBottom="15dp"/>

                    <TextView
                        android:id="@+id/tv_terms"
                        style="@style/App_Text_view"
                        android:textSize="14sp"
                        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textIsSelectable="true"
                        />

                </LinearLayout>

            </ScrollView>

        </FrameLayout>



        <net.bohush.geometricprogressview.GeometricProgressView
            android:id="@+id/progress_spinner"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:visibility="gone"
            tools:visibility="visible"
            app:gp_color="@color/grey"
            app:gp_duration="800"
            app:gp_figure_padding="3dp"
            app:gp_number_of_angles="12"
            app:gp_type="triangle"
            android:layout_marginBottom="100dp"/>

    </FrameLayout>


</layout>