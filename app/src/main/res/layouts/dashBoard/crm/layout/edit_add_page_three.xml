<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    >

    <data>

        <variable
            name = "crmNote"
            type = "com.team.mamba.atlas.data.model.api.fireStore.CrmNotes"/>

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:focusable="true"
        android:clickable="true"
        android:padding="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="105dp"
                android:layout_height="40dp"
                android:layout_gravity="end"
                android:layout_marginLeft="10dp"
                android:innerRadius="0dp"
                android:shape="ring"
                app:cardBackgroundColor="#E0A850"
                app:cardCornerRadius="7dp"
                card_view:cardElevation="0dp"
                >

                <Button
                    android:id="@+id/btn_continue"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackground"
                    android:fontFamily="@font/lato"
                    android:text="Continue"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    />

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="end"
                android:layout_margin="15dp"
                >


                <androidx.cardview.widget.CardView
                    android:layout_width="12dp"
                    android:layout_height="8dp"
                    android:innerRadius = "0dp"
                    android:shape = "ring"
                    card_view:cardElevation="0dp"
                    app:cardCornerRadius = "4dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="5dp"
                    app:cardBackgroundColor="@color/material_icon"
                    >

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="12dp"
                    android:layout_height="8dp"
                    android:innerRadius = "0dp"
                    android:shape = "ring"
                    card_view:cardElevation="0dp"
                    app:cardCornerRadius = "4dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="5dp"
                    app:cardBackgroundColor="@color/material_icon"
                    >

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="12dp"
                    android:layout_height="8dp"
                    android:innerRadius = "0dp"
                    android:shape = "ring"
                    card_view:cardElevation="0dp"
                    app:cardCornerRadius = "4dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="5dp"
                    app:cardBackgroundColor="@color/material_icon"
                    >

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="12dp"
                    android:layout_height="8dp"
                    android:innerRadius = "0dp"
                    android:shape = "ring"
                    card_view:cardElevation="0dp"
                    app:cardCornerRadius = "4dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="5dp"
                    app:cardBackgroundColor="@color/material_icons_light"
                    >

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="12dp"
                    android:layout_height="8dp"
                    android:innerRadius = "0dp"
                    android:shape = "ring"
                    card_view:cardElevation="0dp"
                    app:cardCornerRadius = "5dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="5dp"
                    app:cardBackgroundColor="@color/material_icons_light"
                    >

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="12dp"
                    android:layout_height="8dp"
                    android:innerRadius = "0dp"
                    android:shape = "ring"
                    card_view:cardElevation="0dp"
                    app:cardCornerRadius = "5dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="5dp"
                    app:cardBackgroundColor="@color/material_icons_light"
                    >

                </androidx.cardview.widget.CardView>


            </LinearLayout>


            <TextView
                style="@style/App_Text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
                android:textSize="17sp"
                android:text="Opportunity Details"/>


            <TextView
                style="@style/App_Text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:layout_marginTop="15dp"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:text="@string/what_stage_of_opp"/>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp">

                <LinearLayout
                    android:id = "@+id/layout_new"
                    android:orientation = "horizontal"
                    android:layout_width = "wrap_content"
                    android:layout_height = "wrap_content"
                    android:layout_marginBottom = "5dp"
                    >

                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:id = "@+id/chk_bx_new"
                        android:layout_width = "wrap_content"
                        android:layout_height = "wrap_content"
                        app:buttonTint = "@color/black"
                        android:checked="true"
                        />

                    <TextView
                        style="@style/App_Text_view"
                        android:layout_width = "wrap_content"
                        android:layout_height = "wrap_content"
                        android:text = "New"
                        android:layout_margin = "5dp"
                        android:layout_gravity="center_vertical"
                        android:textSize="15sp"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
                        />

                </LinearLayout>

                <LinearLayout
                    android:id = "@+id/layout_qualified"
                    android:orientation = "horizontal"
                    android:layout_width = "wrap_content"
                    android:layout_height = "wrap_content"
                    android:layout_marginBottom = "5dp"
                    >

                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:id = "@+id/chk_bx_qualified"
                        android:layout_width = "wrap_content"
                        android:layout_height = "wrap_content"
                        app:buttonTint = "@color/black"
                        />

                    <TextView
                        style="@style/App_Text_view"
                        android:layout_width = "wrap_content"
                        android:layout_height = "wrap_content"
                        android:text = "Qualified"
                        android:layout_margin = "5dp"
                        android:layout_gravity="center_vertical"
                        android:textSize="15sp"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
                        />

                </LinearLayout>

                <LinearLayout
                    android:id = "@+id/layout_proposal"
                    android:orientation = "horizontal"
                    android:layout_width = "wrap_content"
                    android:layout_height = "wrap_content"
                    android:layout_marginBottom = "5dp"
                    >

                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:id = "@+id/chk_box_proposal"
                        android:layout_width = "wrap_content"
                        android:layout_height = "wrap_content"
                        app:buttonTint = "@color/black"
                        />

                    <TextView
                        style="@style/App_Text_view"
                        android:layout_width = "wrap_content"
                        android:layout_height = "wrap_content"
                        android:text = "Proposal"
                        android:layout_margin = "5dp"
                        android:layout_gravity="center_vertical"
                        android:textSize="15sp"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
                        />

                </LinearLayout>

                <LinearLayout
                    android:id = "@+id/layout_negotiation"
                    android:orientation = "horizontal"
                    android:layout_width = "wrap_content"
                    android:layout_height = "wrap_content"
                    android:layout_marginBottom = "5dp"
                    >

                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:id = "@+id/chk_box_negotiation"
                        android:layout_width = "wrap_content"
                        android:layout_height = "wrap_content"
                        app:buttonTint = "@color/black"
                        />

                    <TextView
                        style="@style/App_Text_view"
                        android:layout_width = "wrap_content"
                        android:layout_height = "wrap_content"
                        android:text = "Negotiation"
                        android:layout_margin = "5dp"
                        android:layout_gravity="center_vertical"
                        android:textSize="15sp"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
                        />

                </LinearLayout>

                <LinearLayout
                    android:id = "@+id/layout_closed_won"
                    android:orientation = "horizontal"
                    android:layout_width = "wrap_content"
                    android:layout_height = "wrap_content"
                    android:layout_marginBottom = "5dp"
                    >

                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:id = "@+id/chk_box_closed_won"
                        android:layout_width = "wrap_content"
                        android:layout_height = "wrap_content"
                        app:buttonTint = "@color/black"
                        />

                    <TextView
                        style="@style/App_Text_view"
                        android:layout_width = "wrap_content"
                        android:layout_height = "wrap_content"
                        android:text = "Closed Won"
                        android:layout_margin = "5dp"
                        android:layout_gravity="center_vertical"
                        android:textSize="15sp"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
                        />

                </LinearLayout>

                <LinearLayout
                    android:id = "@+id/layout_closed_lost"
                    android:orientation = "horizontal"
                    android:layout_width = "wrap_content"
                    android:layout_height = "wrap_content"
                    android:layout_marginBottom = "5dp"
                    >

                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:id = "@+id/chk_box_closed_lost"
                        android:layout_width = "wrap_content"
                        android:layout_height = "wrap_content"
                        app:buttonTint = "@color/black"
                        />

                    <TextView
                        style="@style/App_Text_view"
                        android:layout_width = "wrap_content"
                        android:layout_height = "wrap_content"
                        android:text = "Closed Lost"
                        android:layout_margin = "5dp"
                        android:layout_gravity="center_vertical"
                        android:textSize="15sp"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
                        />

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

    </FrameLayout>

</layout>